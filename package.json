{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn lint"
    }
  },
  "scripts": {
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "build:commonjs": "tsc -b .",
    "build": "yarn build:esm && yarn build:commonjs",
    "build:watch": "tsc -b . -w",
    "publish": "yarn build && lerna publish",
    "lint": "yarn tslint --project ./tsconfig.lint.json",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/packages/**/*.test.ts"
    ]
  }
}
