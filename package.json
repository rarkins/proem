{
  "name": "root",
  "private": true,
  "scripts": {
    "build:esm": "tsc -b packages/tsconfig.esm.json",
    "build:commonjs": "tsc -b packages",
    "build": "npm run build:esm && npm run build:commonjs",
    "publish": "npm run build && lerna publish",
    "test:watch": "jest --watch",
    "build:watch": "tsc -b packages -w"
  },
  "devDependencies": {
    "@types/jest": "^23.3.8",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "typescript": "^3.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/packages/**/*.test.ts"
    ]
  }
}
