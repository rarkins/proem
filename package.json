{
  "name": "root",
  "private": true,
  "scripts": {
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "build:commonjs": "tsc -b .",
    "build": "npm run build:esm && npm run build:commonjs",
    "build:watch": "tsc -b packages -w",
    "publish": "npm run build && lerna publish",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^23.3.8",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "prettier": "^1.14.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/packages/**/*.test.ts"
    ]
  }
}
