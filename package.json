{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:esm": "tsc -b ./tsconfig.esm.json",
    "build:commonjs": "tsc -b .",
    "build": "yarn build:esm && yarn build:commonjs",
    "build:watch": "tsc -b . -w",
    "publish": "yarn build && lerna publish",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "jest": "^24.1.0",
    "lerna": "^3.13.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/packages/**/*.test.ts"
    ]
  }
}
