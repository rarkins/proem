{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "newLine": "LF",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["es5"],
    "outDir": "package",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*", "test/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["package", "node_modules"]
}
